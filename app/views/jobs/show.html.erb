<% provide(:title, @job.role) %>
<br/>
<div class="row well">
  <div class="col-md-12 no-padding-mobile">
    <div class="title-wrapper col-md-12">
      <h1><span><%= @job.role %> - <%= @job.employer %></span></h1>
    </div>
  </div>
  <!-- left side -->
  <div class="col-md-8 no-padding-mobile no-padding-tablet">
    <%= form_for(@job , :html => {:class => "form-horizontal"})  do |f| %>
      <%= render 'shared/error_messages', object: f.object%>
      
      <div class="description-wrapper col-md-12">
        
    
        <div class="description-group">
          <h3>Description</h3>
          <p class="form-control-static"><%= simple_format @job.description %> </p>
        </div>
    
       <div class="description-group">
          <h3>Criteria</h3>
          <p class="form-control-static"><%= simple_format @job.criteria %> </p>
        </div>
    
        <div class="description-group">
          <h3>Category</h3>
          <p class="form-control-static"><%= @job.category %> </p>
        </div>
    
        <div class="description-group">
          <h3>Salary</h3>
          <p class="form-control-static">
            <% if !@job.salary.nil? %>
            $<%= @job.salary %> 
            <% end %> 
            <%= @job.salary_type %> 
          </p>
        </div>
    
        <div class="description-group">
          <h3>Closed Date</h3>
          <div id='datetimepicker5'>
            <p class="form-control-static"><%= @job.closed_date.strftime("%d/%m/%Y") %></p>
          </div>
        </div>
    
        <div class="description-group">
          <h3>How To Apply</h3>
          <p class="form-control-static"><%= simple_format @job.apply %> </p>
        </div>
    
        <% if current_user?(@job.user) %>
          <div class="description-group">
            <div class="col-md-12 text-right">
              <%= link_to "Edit", edit_job_path(@job),:class=>"btn btn-edit"%>
              <%= link_to "Delete", @job, method: :delete,
              data: { confirm: "Are you sure you want to remove this job from the list?" },
              title: @job.role, :class=>"btn btn-danger" %>
            </div>
          </div>
        <% end %>
        
      </div>
    <% end %>
  </div>
  
  <!-- right side -->
  <div class="col-md-4 no-padding-mobile no-padding-tablet">
    <div class="description-wrapper col-md-12">
        <div class="description-group">
            <h3>Role</h3>
            <p class="form-control-static"><%= @job.role %> </p>
        </div>
    
        <div class="description-group">
          <h3>Employer</h3>
          <p class="form-control-static"><%= @job.employer %> </p>
        </div>
    
        <div class="description-group">
          <h3>Location</h3>
          <p class="form-control-static"><%= @job.location %> </p>
        </div>
    
        <div class="description-group">
          <h3>Classification</h3>
          <p class="form-control-static"><%= @job.classification.name %> </p>
        </div>
    </div>
    
    <div class="description-wrapper col-md-12 form-group">
      <div class="description-group job-share col-md-12">
        <h3>Share this job</h3>
        <div class="social-likes" data-counters="no">
          <div class="facebook" title="Share link on Facebook">Facebook</div>
          <div class="twitter" data-via="ConnectYouHere" data-related="ConnectYouHere provides various information such as job and accomodation for international student and worker in Australia." title="Share link on Twitter">Twitter</div>
          <div class="plusone" title="Share link on Google+">Google+</div>
        </div>
      </div>
      <div class="form-group">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- ConnectYouHere -->
        <ins class="adsbygoogle"
         style="display:inline-block;width:300px;height:250px"
         data-ad-client="ca-pub-3918400380111417"
         data-ad-slot="7426534281"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </div>
  </div>
  
</div>

