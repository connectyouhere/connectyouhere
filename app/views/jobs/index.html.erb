<div class="section-header job-background">
	<h1>Available Jobs</h1>
	<%= link_to "Post a job", new_job_path, :class =>"btn btn-large btn-custom full-width-mobile " %>
</div>


<%= form_tag({controller: "jobs", action: "index"}, method: "get", style: "padding:0px", class: "col-md-12 no-padding-mobile no-padding-tablet form-horizontal") do%>
	<div class="wrapper-with-title filter-form container">
		<a role="button" data-toggle="collapse" data-parent="#accordion" href="#filterContent" aria-expanded="false" aria-controls="filterContent" class="collapsed">
			<div class="panel-heading wrapper-header" role="tab" id="headingOne">
				<h4 class="panel-title">
					Filter
					<i class="fa fa-chevron-down"></i>
				</h4>	
			</div>
		</a>
	
		<div id="filterContent" class="panel-collapse col-sm-12 collapse" role="tabpanel">
			<div class="wrapper-container container">
				<label class="col-sm-6 col-xs-12 control-label">Classification</label>
				<i class="fa fa-caret-down"></i>
				<%= collection_select :classification_ids, "", Classification.all, :id, :name, {:prompt => "Select a classification"}, {:class => "col-xs-12 form-control"} %>
				<div class="form-group col-xs-12">
					<div class="no-padding-side">
						<input type="submit" value"filter" class="btn btn-large btn-custom-2">
					</div>
				</div>
			</div>
		</div>
	</div>		
<% end %>

<div class="row well" id="job">
	<div class="col-md-12">
		
		<%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
		<div class="col-md-12 no-padding-mobile">
			<%= render @jobs %>
		</div>
	</div>
</div>
