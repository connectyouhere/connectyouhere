 <div class="col-md-4 no-padding">
 	<h4 class="job-category"><%= job.classification.name %></h4>
 	<a href="<%= job_path(job) %>">
 		<button class="job-button full-color">
 		<% if job.category == "Full-time" %>
 		<img alt="separator" class="separator img-responsive" src="/assets/FT_ICON.png">
 		<% else %>
 		<img alt="separator" class="separator img-responsive" src="/assets/PT_ICON.png">
 		<% end %>
 		<br/><br/>
 		<div class="title-employer">
		<h3><strong><%= job.role %></strong></h3>
 		
 		<p> <img src="/assets/BRIEFCASE_ICON.png"><%= job.employer %></p>
 		</div>
 		<div class="job-description"> 
 			<p><%= truncate( job.criteria, :length => 200, :separator => ' ') %></p>
 		</div>
 		<p class="bottom-left"><span class="glyphicon glyphicon-map-marker"></span> <%= job.location %></p>
 		<p class="bottom-right"><em><%= time_ago_in_words(job.created_at) %></em> ago</p>
 		</button>
 	</a>
</div>


