<% provide(:title, 'Sign up') %>

<div class="row header-bg-image editing-form">
  <h1>Sign Up</h1>
  <hr>
  <%= form_for(@user , :html => {:class => "form-horizontal margin-top-30"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <!--I am -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
          <label class="col-sm-6 col-xs-12 control-label">I am</label>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      <div class="col-xs-12 dark-background form-input">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary active">
              <input type="radio" name="goal" id="option1" checked> Looking for jobs
            </label>
            <label class="btn btn-primary">
              <input type="radio" name="goal" id="option2"> Looking for employees
            </label>
          </div>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
    
    <!-- Name -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :name, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <%= f.text_field :name,:required=>"required", :class =>"form-control"%>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
  
    <!-- E-mail -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :email, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <%= f.text_field :email,:required=>"required", :class =>"form-control"%>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
  
    <!-- Password -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :password, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <%= f.password_field :password,:required=>"required", :class =>"form-control"%>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
  
    <!-- Confirm Password -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :password_confirmation, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <%= f.password_field :password_confirmation,:required=>"required", :class =>"form-control"%>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
  
    <!-- Phone -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :phone, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <%= f.text_field :phone,:required=>"required", :class =>"form-control"%>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
  
    <!-- Address -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :address, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <div class="col-sm-6 col-xs-12">
          <%= f.text_field :address,:required=>"required", :class =>"form-control"%>
        </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
  
    <!-- Suburb -->
    <div class="form-group">
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
        <%= f.label :suburb, :class =>"col-sm-6 col-xs-12 control-label" %>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
      <div class="col-xs-12 dark-background title-form">
        <div class="col-sm-3 col-xs-1"></div>
          <div class="col-sm-6 col-xs-12">
            <%= f.text_field :suburb,:required=>"required", :class =>"form-control"%>
          </div>
        <div class="col-sm-3 col-xs-1"></div>
      </div>
    </div>
    
    <div id="candidate">
      <!-- DOB -->
      <div class="form-group">
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <label class="col-sm-6 col-xs-12 control-label">Date of birth </label>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <div class="col-sm-6 col-xs-12">
            <input name="user[dob]"type='text' class="form-control" data-format="DD/MM/YYYY" placeholder="DD/MM/YYYY format. e.g 25-4-1992"/>
          </div>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
      </div>
  
      <!-- Education -->
      <div class="form-group">
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <%= f.label :education, :class =>"col-sm-6 col-xs-12 control-label" %>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <div class="col-sm-6 col-xs-12">
            <select name="job[education]" id="education" class="form-control">
              <option value="" default selected>Select the your current/latest education</option>
              <option value="High school">High school</option>
              <option value="Diploma">Diploma</option>
              <option value="Undergraduate">Undergraduate</option>
              <option value="Postgraduate">Postgraduate</option>
            </select>
          </div>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
      </div>
      
      <!-- Introduction -->
      <div class="form-group">
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <label class="col-sm-6 col-xs-12 control-label">Introduction</label>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <div class="col-sm-6 col-xs-12">
            <p>Tell us more about yourself. E.g your education details or latest employment</p>
            <%= f.text_area :details, :placeholder =>"e.g: I graduated from UNSW in 2014 with excellent marks. I took finance and accounting as my major. I had a three month internship in ANZ as a account receiveable. I am looking for a full-time position as an account payable or similar roles", :class =>"form-control", :rows => 10%>
          </div>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
      </div>
  
      <!-- Classification -->
      <div class="form-group">
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <label class="col-sm-6 col-xs-12 control-label">Classification</label>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <div class="col-sm-6 col-xs-12">
            <p class="dark-background">Send me emails if there is a job that suit me in the categories below:</p>
            <div class="btn-group" data-toggle="buttons">
                <% @classifications.each do |classification| %>
              <label class="btn btn-primary">
              <%= check_box_tag "classification[]", classification.id%>
                <%= classification.name %>
                </label>
              <% end %>
            </div>
          </div>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
      </div>
  
      <!-- Category -->
      <div class="form-group">
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <label class="col-sm-6 col-xs-12 control-label">Category</label>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
        <div class="col-xs-12 dark-background title-form">
          <div class="col-sm-3 col-xs-1"></div>
          <div class="col-sm-6 col-xs-12">
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-primary">
              <%= check_box_tag "categories[]", "part-time"%>
              Part-time
                </label>
              <label class="btn btn-primary">
              <%= check_box_tag "categories[]", "full-time"%>
              Full-time
              </label>
            </div>
          </div>
          <div class="col-sm-3 col-xs-1"></div>
        </div>
      </div>
      
    </div>
    
    <!-- Create My Account Button -->
    <div class="form-group">
      <div class="col-sm-5 col-xs-1"></div>
      <div class="padding-side-30 col-sm-2 col-xs-12">
        <%= f.submit "Create my account", class: "btn btn-large btn-custom" %>
      </div>
      <div class="col-sm-5 col-xs-1"></div>
    </div>
  <% end %>
</div>
<script>
$(document).ready(function() {
    $('input[type=radio][name=goal]').change(function() {
        $('#candidate').toggle();
    });
});
</script>
